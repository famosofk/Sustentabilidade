<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/farm"
        tools:context=".fragment.farmsfragments.farms.FarmsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_blue_green"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/createProgramNavigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/create_program_intro"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@android:color/white" />

            <TextView
                android:id="@+id/createFarmNavigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/create_farm_intro"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@android:color/white" />

            <TextView
                android:id="@+id/joinFarmNavigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/alertdialog_title_intro_message"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/downloadProgramsProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:indeterminateTint="@android:color/white"
            android:visibility="invisible" />
    </FrameLayout>


</layout>