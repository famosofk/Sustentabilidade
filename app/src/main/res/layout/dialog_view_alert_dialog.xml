<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/directAnswerMode"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/direct_description"
            android:focusable="true"
            app:maxImageSize="48dp"
            app:srcCompat="@drawable/ic_baseline_arrow_circle_down_24"
            tools:ignore="NestedWeights" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/treeAnswerMode"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/tree_description"
            android:focusable="true"
            android:tint="@android:color/white"
            android:tintMode="src_in"
            app:maxImageSize="32dp"
            app:srcCompat="@drawable/ic_baseline_account_tree_24"
            tools:ignore="NestedWeights" />
    </LinearLayout>

</LinearLayout>