<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".fragment.certificationfragments.selectfarmcertitification.SelectFarmCertificationFragment">


        <TextView
            style="@style/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_farm_intro"
            android:textColor="@color/colorPrimaryDark" />

        <Spinner
            android:id="@+id/farmAdapterTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_system_intro"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selectSystemRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="240dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


    </LinearLayout>

</layout>
