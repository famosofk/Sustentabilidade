<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:context=".fragment.certificationfragments.searchcertification.SearchFragment">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesquisar certificações"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layoutSpinnerSearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:minHeight="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/textView7"
                style="@style/edittext_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sistema?" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutFarmCodeSearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layoutSpinnerSearch"
            tools:layout_editor_absoluteX="272dp">

            <TextView
                android:id="@+id/textView8"
                style="@style/edittext_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fazenda?" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutFarmCodeSearch" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>